<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/math"
        android:layout_width="380dp"
        android:layout_height="57dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:textAlignment="viewEnd"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:textSize="64sp"
        app:layout_constraintBottom_toTopOf="@+id/sAdd"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/n1"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:padding="0dp"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/n0"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/n4"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:padding="0dp"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/n1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/n7"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:padding="0dp"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/n4"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/n2"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:layout_marginBottom="80dp"
        android:padding="0dp"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/n1" />

    <Button
        android:id="@+id/n5"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:padding="0dp"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/n2"
        app:layout_constraintLeft_toRightOf="@+id/n4" />

    <Button
        android:id="@+id/n8"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:padding="0dp"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/n5"
        app:layout_constraintLeft_toRightOf="@+id/n7" />

    <Button
        android:id="@+id/n3"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:layout_marginBottom="80dp"
        android:padding="0dp"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/n2" />

    <Button
        android:id="@+id/n6"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:padding="0dp"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/n3"
        app:layout_constraintLeft_toRightOf="@+id/n5" />

    <Button
        android:id="@+id/n9"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:padding="0dp"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/n6"
        app:layout_constraintLeft_toRightOf="@+id/n8" />

    <Button
        android:id="@+id/n0"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:padding="0dp"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/sRes"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/sDot" />

    <Button
        android:id="@+id/sSub"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/sDiv"
        app:layout_constraintLeft_toRightOf="@+id/n6" />

    <Button
        android:id="@+id/sDiv"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/sMul"
        app:layout_constraintLeft_toRightOf="@+id/n3" />

    <Button
        android:id="@+id/sMul"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:text="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/sRes" />

    <Button
        android:id="@+id/sDot"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:text="."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/n0" />

    <Button
        android:id="@+id/sAdd"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/sSub"
        app:layout_constraintLeft_toRightOf="@+id/n9" />

    <Button
        android:id="@+id/cleanO"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="-1dp"
        android:text="CE"
        app:layout_constraintBottom_toTopOf="@+id/sAdd"
        app:layout_constraintLeft_toLeftOf="@+id/sAdd" />
</android.support.constraint.ConstraintLayout>